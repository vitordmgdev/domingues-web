generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  role          String?
  banned        Boolean?  @default(false)
  banReason     String?
  banExpires    DateTime?
  onboardedAt   DateTime?
  accounts      Account[]
  party         Party?
  sessions      Session[]

  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  impersonatedBy String?
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(ulid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model Party {
  id                String         @id @default(ulid())
  firstName         String
  lastName          String?
  fullName          String
  email             String?
  cpf               String?        @unique
  cnpj              String?        @unique
  archivedAt        DateTime?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  userId            String?        @unique
  description       String?
  companyName       String?
  fantasyName       String?
  stateRegistration String?
  user              User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  partyAddress      PartyAddress[]
  partyPhone        PartyPhone[]
  partyType         PartyType[]
  projects          Project[]

  @@map("party")
}

model PartyType {
  id        String        @id @default(cuid())
  partyId   String
  type      PartyEntities
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  party     Party         @relation(fields: [partyId], references: [id], onDelete: Cascade)
  status    PartyTypeStatus   @default(NOVO)

  @@unique([partyId, type])
  @@index([partyId])
  @@map("party_type")
}

model PartyPhone {
  id         String   @id @default(ulid())
  partyId    String
  phone      String
  isPrimary  Boolean  @default(false)
  isWhatsapp Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  party      Party    @relation(fields: [partyId], references: [id], onDelete: Cascade)

  @@unique([partyId, phone])
  @@index([partyId])
  @@map("party_phone")
}

model PartyAddress {
  id         String   @id @default(ulid())
  partyId    String
  name       String?
  identifier String?
  complement String?
  district   String?
  city       String?
  state      String?
  zipCode    String?
  isPrimary  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  party      Party    @relation(fields: [partyId], references: [id], onDelete: Cascade)

  @@index([partyId])
  @@map("party_address")
}

model Project {
  id String @id @default(ulid())
  partyId String
  title String
  startedAt DateTime
  finishedAt DateTime?
  deadlineDate DateTime?
  priority PriorityStatus

  party Party @relation(fields: [partyId], references: [id], onDelete: NoAction)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PriorityStatus {
  BAIXA
  MEDIA
  ALTA
}

enum PartyTypeStatus {
  NOVO
  SUSPENSO
  CONTATO
  INTERESSE
  PERDA
}

enum PartyEntities {
  LEAD
  CLIENTE
  COLABORADOR
  FORNECEDOR
  PARCEIRO
}
