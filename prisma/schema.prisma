generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  role          String?
  banned        Boolean?  @default(false)
  banReason     String?
  banExpires    DateTime?
  onboardedAt   DateTime?
  accounts      Account[]
  party         Party?
  sessions      Session[]

  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  impersonatedBy String?
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model Party {
  id        BigInt @id @default(autoincrement())
  publicId  String @unique
  privateId String @unique @default(uuid())

  firstName         String
  lastName          String?
  fullName          String
  email             String?
  cpf               String?        @unique
  cnpj              String?        @unique
  archivedAt        DateTime?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  userId            String?        @unique
  description       String?
  companyName       String?
  fantasyName       String?
  stateRegistration String?
  user              User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  partyAddresses    Address[]
  phones            PartyPhone[]
  partyTypes        PartyType[]
  projects          Project[]

  @@index([publicId])
}

model PartyType {
  id        BigInt          @id @default(autoincrement())
  publicId  String          @unique
  privateId String          @unique @default(uuid())
  partyId   BigInt
  type      PartyEntities
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  party     Party           @relation(fields: [partyId], references: [id], onDelete: Cascade)
  status    PartyTypeStatus @default(NOVO)

  @@unique([partyId, type])
  @@index([partyId])
  @@map("party_type")
}

model PartyPhone {
  id         BigInt   @id @default(autoincrement())
  publicId   String   @unique
  privateId  String   @unique @default(uuid())
  partyId    BigInt
  phone      String
  isPrimary  Boolean  @default(false)
  isWhatsapp Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  party      Party    @relation(fields: [partyId], references: [id], onDelete: Cascade)

  @@unique([partyId, phone])
  @@index([partyId])
  @@map("party_phone")
}

model Address {
  id         BigInt   @id @default(autoincrement())
  publicId   String   @unique
  privateId  String   @unique @default(uuid())
  partyId    BigInt
  name       String?
  identifier String?
  complement String?
  district   String?
  city       String?
  state      String?
  zipCode    String?
  isPrimary  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  party      Party    @relation(fields: [partyId], references: [id], onDelete: Cascade)
  addressOnProject AddressOnProject[]

  @@index([partyId])
  @@map("address")
}

model AddressOnProject {
  id BigInt @id @default(autoincrement())
  publicId String @unique
  privateId String @unique @default(uuid())
  addressId BigInt @unique

  address Address @relation(fields: [addressId], references: [id], onDelete: Cascade)
  projects Project[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id           Int            @id @default(autoincrement())
  publicId     String         @unique
  privateId    String         @unique @default(uuid())
  partyId      BigInt
  addressId    BigInt
  title        String
  description  String?
  startedAt    DateTime?
  finishedAt   DateTime?
  deadlineDate DateTime
  priority     PriorityStatus

  party Party @relation(fields: [partyId], references: [id], onDelete: NoAction)
  address AddressOnProject @relation(fields: [addressId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([publicId])
  @@map("project")
}

model ClientPipelineStage {
  id          Int     @id @default(autoincrement())
  publicId    String  @unique
  privateId   String  @unique @default(uuid())
  title       String?
  description String?
  position    Float

  pipelineType PipelineType

  items ClientPipelineStageItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("client_pipeline_stage")
}

model ClientPipelineStageItem {
  id              Int    @id @default(autoincrement())
  publicId        String @unique
  privateId       String @unique @default(uuid())
  pipelineStageId Int
  title           String
  position        Float
  entityId        String

  pipelineStage ClientPipelineStage @relation(fields: [pipelineStageId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("client_pipeline_stage_item")
}

enum PipelineType {
  LEAD
  CLIENTE
  PROJETO
}

enum PriorityStatus {
  BAIXA
  MEDIA
  ALTA
}

enum PartyTypeStatus {
  NOVO
  SUSPENSO
  CONTATO
  INTERESSE
  PERDA
}

enum PartyEntities {
  LEAD
  CLIENTE
  COLABORADOR
  FORNECEDOR
  PARCEIRO
}
